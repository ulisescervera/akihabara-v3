<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Akihabara3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_pink_200</item>
        <item name="colorSecondaryVariant">@color/md_red_500</item>
        <item name="colorOnSecondary">@color/md_blue_100</item>


        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg_default</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="android:editTextStyle">@style/AkbEditText</item>
        <item name="buttonStyle">@style/AkbButton</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="android:layout_margin">@dimen/snackbar_margin</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/md_blue_900</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="AkbEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text_soft</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/edit_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/edit_horizontal_padding</item>
    </style>

    <style name="AkbButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AkbDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/main_color</item>
        <item name="android:textColorPrimary">@color/text</item>
    </style>

    <style name="AkbBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AkbBottomSheet</item>
    </style>

    <style name="AkbBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>