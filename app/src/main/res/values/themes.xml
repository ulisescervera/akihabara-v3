<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Akihabara3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="background">@color/white</item>
        <item name="itemBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <item name="colorPrimary">@color/md_yellow_700</item>
        <item name="colorSecondary">@color/md_pink_700</item>

<!--        <item name="colorPrimaryVariant">@color/green</item>-->
<!--        <item name="colorSecondaryVariant">@color/md_red_500</item>-->

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/md_grey_900</item>
        <item name="colorOnSurface">@color/md_grey_900</item>

        <item name="defaultText">@color/md_grey_900</item>
        <item name="heavyText">@color/black</item>
        <item name="softText">@color/md_grey_400</item>
        <item name="greenText">@color/md_green_900</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">?attr/defaultText</item>
        <item name="android:textSize">15sp</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="android:editTextStyle">@style/AkbEditText</item>
        <item name="buttonStyle">@style/AkbButton</item>
        <item name="actionBarTheme">@style/AkbActionBar</item>

        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="AkbActionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AkbTabLayout" parent="Widget.Design.TabLayout">
<!--        <item name="tabBackground">@drawable/tabs_selector</item>--> <!-- todo -->
        <item name="android:background">@drawable/bg_tablayout</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/md_yellow_700</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="android:layout_margin">@dimen/snackbar_margin</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/md_grey_900</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="AkbEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
<!--        <item name="android:textColor">@color/text</item>-->
        <item name="android:textColorHint">?attr/softText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/edit_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/edit_horizontal_padding</item>
    </style>

    <style name="AkbButton" parent="Widget.AppCompat.Button">
<!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AkbDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorAccent">?attr/colorSecondary</item>
<!--        <item name="android:textColorPrimary">@color/text</item>-->
    </style>

    <style name="AkbBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AkbBottomSheet</item>
    </style>

    <style name="AkbBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/black</item>
    </style>

</resources>