<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Akihabara3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/md_grey_900</item>
        <item name="background">@color/md_grey_900</item>
        <item name="itemBackground">@color/md_grey_900</item>
        <item name="colorSurface">@color/md_grey_800</item>

        <item name="colorPrimary">@color/md_yellow_200</item>
        <item name="colorSecondary">@color/md_pink_200</item>

        <!--        <item name="colorPrimaryVariant">@color/green</item>-->
        <!--        <item name="colorSecondaryVariant">@color/md_red_500</item>-->

        <item name="colorOnPrimary">@color/md_grey_900</item>
        <item name="colorOnSecondary">@color/md_grey_900</item>
        <item name="colorOnBackground">@color/md_grey_50</item>
        <item name="colorOnSurface">@color/md_grey_50</item>

        <!-- Custom colors -->
        <item name="defaultText">@color/md_grey_50</item>
        <item name="heavyText">@color/white</item>
        <item name="softText">@color/md_grey_400</item>
        <item name="greenText">@color/md_green_600</item>

        <item name="android:statusBarColor">@color/md_grey_900</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">?attr/defaultText</item>
        <item name="android:textSize">15sp</item>
        <item name="snackbarStyle">@style/AkbSnackbar</item>
        <item name="snackbarButtonStyle">@style/AkbSnackbarButton</item>
        <item name="android:editTextStyle">@style/AkbEditText</item>
        <item name="buttonStyle">@style/AkbButton</item>
        <item name="actionBarTheme">@style/AkbActionBar</item>
        <item name="android:navigationBarColor">@color/md_grey_900</item>

        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="imageButtonStyle">@style/AkbImageButton</item>
    </style>

    <style name="AkbActionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="android:background">@color/md_grey_900</item>
    </style>

    <style name="AkbTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/bg_tablayout</item>
        <item name="tabSelectedTextColor">@color/md_grey_900</item>
        <item name="tabTextColor">@color/md_grey_50</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">@dimen/tab_height</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicator">@drawable/bg_selected_tab</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="AkbSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="android:layout_margin">@dimen/snackbar_margin</item>
    </style>

    <style name="AkbSnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/md_grey_50</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurface">@color/md_grey_900</item>
    </style>

    <style name="AkbEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColorHint">?attr/softText</item>
        <item name="android:textColor">?attr/defaultText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/edit_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/edit_horizontal_padding</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="AkbButton" parent="Widget.AppCompat.Button">
        <!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AkbDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorAccent">?attr/colorSecondary</item>
        <!--        <item name="android:textColorPrimary">@color/text</item>-->
    </style>

    <style name="AkbBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AkbBottomSheet</item>
    </style>

    <style name="AkbBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="AkbImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">?attr/colorPrimary</item>
    </style>

</resources>